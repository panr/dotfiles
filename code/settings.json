{
	"editor.formatOnSave": true,
	"[html]": {
		"editor.formatOnSave": false,
		"editor.defaultFormatter": "vscode.html-language-features"
	},
	"[gohtml]": {
		"editor.formatOnSave": false,
		"editor.defaultFormatter": "vscode.html-language-features"
	},
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[json]": {
		"editor.defaultFormatter": "vscode.json-language-features",
		"editor.formatOnSave": true
	},
	"[yaml]": {
		"editor.formatOnSave": false
	},
	"[css]": {
		"editor.defaultFormatter": "stylelint.vscode-stylelint"
	},
	"[scss]": {
		"editor.defaultFormatter": "stylelint.vscode-stylelint"
	},
	"[less]": {
		"editor.defaultFormatter": "stylelint.vscode-stylelint"
	},
	"[svelte]": {
		"editor.defaultFormatter": "svelte.svelte-vscode"
	},
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[go]": {
		"editor.defaultFormatter": "golang.go",
		"editor.formatOnSave": true
	},
	"stylelint.validate": ["css", "less", "scss"],
	"color-highlight.markerType": "dot-before",
	"editor.autoIndent": "advanced",
	"editor.bracketPairColorization.enabled": true,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit",
		"source.fixAll.stylelint": "explicit"
	},
	"editor.colorDecorators": false,
	"editor.fontFamily": "Input Mono, Monaco, Menlo, Input Mono, Consolas, monospace",
	"editor.fontSize": 14,
	"editor.minimap.enabled": false,
	"editor.renderWhitespace": "none",
	"editor.rulers": [
		80,
		100
	],
	"editor.scrollBeyondLastLine": false,
	"editor.semanticHighlighting.enabled": false,
	"editor.stickyScroll.enabled": true,
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			{
				"scope": "string",
				"settings": {
					"foreground": "#7bc2bc"
				}
			},
			{
				"scope": "string.quoted",
				"settings": {
					"foreground": "#98c379"
				}
			}
		]
	},
	"editor.unicodeHighlight.allowedCharacters": {
		"â€™": true
	},
	"editor.wordWrap": "on",
	"editor.wordWrapColumn": 100,
	"explorer.confirmDelete": false,
	"explorer.openEditors.visible": 0,
	"files.associations": {
		"": "plaintext",
		"*.jsdoc": "javascript",
		"*.partial": "handlebars",
		"_redirects": "plaintext",
		"*.html": "html",
		"*.gohtml": "html",
		"*.postcss": "css",
    "*.css": "css"
	},
	"files.autoSaveDelay": 300,
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"git.enabled": true,
	"git.path": "/opt/homebrew/bin/git",
	"git.confirmSync": false,
	"git.enableSmartCommit": true,
	"git.ignoreRebaseWarning": true,
	"html.format.wrapLineLength": 100,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"javascript.validate.enable": false,
	"markdownlint.config": {
		"MD001": false,
		"MD013": false
	},
	"prettier.htmlWhitespaceSensitivity": "strict",
	"prettier.printWidth": 100,
	"prettier.requireConfig": true,
	"security.workspace.trust.banner": "never",
	"security.workspace.trust.untrustedFiles": "open",
	"settingsSync.ignoredExtensions": [],
	"settingsSync.ignoredSettings": [
		"editor.fontSize"
	],
	"typescript.format.enable": true,
	"typescript.surveys.enabled": false,
	"window.newWindowDimensions": "inherit",
	"window.openFoldersInNewWindow": "on",
	"terminal.integrated.fontSize": 13,
	"workbench.editorAssociations": {
		"*.ipynb": "jupyter-notebook"
	},
	"workbench.iconTheme": "file-icons",
	"workbench.startupEditor": "newUntitledFile",
	"workbench.statusBar.visible": true,
	"intelephense.telemetry.enabled": false,
	"go.survey.prompt": false,
	"vscode-neovim.highlightGroups.highlights": {
		"Directory": "vim",
		"IncSearch": {
			"backgroundColor": "theme.editor.findMatchBackground",
			"borderColor": "theme.editor.findMatchBorder"
		},
		"Search": {
			"backgroundColor": "theme.editor.findMatchHighlightBackground",
			"borderColor": "theme.editor.findMatchHighlightBorder"
		},
		"Visual": {
			"backgroundColor": "theme.editor.selectionBackground"
		},
		"Conceal": "vim",
		"Substitute": "vim"
	},
	"go.toolsManagement.autoUpdate": false,
	"html.format.templating": true,
	"clangd.checkUpdates": false,
	"code-runner.enableAppInsights": false,
	"docker-explorer.enableTelemetry": false,
	"extensions.ignoreRecommendations": true,
	"gitlens.showWelcomeOnInstall": false,
	"gitlens.showWhatsNewAfterUpgrades": false,
	"java.help.firstView": "none",
	"java.help.showReleaseNotes": false,
	"julia.enableTelemetry": false,
	"kite.showWelcomeNotificationOnStartup": false,
	"liveServer.settings.donotShowInfoMsg": true,
	"Lua.telemetry.enable": false,
	"material-icon-theme.showWelcomeMessage": false,
	"pros.showWelcomeOnStartup": false,
	"pros.useGoogleAnalytics": false,
	"redhat.telemetry.enabled": false,
	"rpcServer.showStartupMessage": false,
	"shellcheck.disableVersionCheck": true,
	"sonarlint.disableTelemetry": true,
	"telemetry.telemetryLevel": "off",
	"terraform.telemetry.enabled": false,
	"update.showReleaseNotes": false,
	"workbench.welcomePage.walkthroughs.openOnInstall": false,
	"diffEditor.ignoreTrimWhitespace": false,

	"workbench.editor.empty.hint": "hidden",
	"editor.unicodeHighlight.ambiguousCharacters": false,
	"editor.accessibilitySupport": "off",
	"window.nativeTabs": true,
	"window.customTitleBarVisibility": "never",
	"extensions.autoUpdate": false,
	"update.mode": "manual",
	"git.openRepositoryInParentFolders": "never",
	"go.formatTool": "gofmt",
	"vim.cursorStylePerMode.visualblock": "block",
	"vim.cursorStylePerMode.visualline": "line",
	"vim.cursorStylePerMode.insert": "line",
	"vim.cursorStylePerMode.normal": "block",
	"vim.cursorStylePerMode.replace": "underline",
	"vim.cursorStylePerMode.visual": "line",
	"color-highlight.markRuler": false,
	"[postcss]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"editor.tabSize": 2,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"[toml]": {
		"editor.defaultFormatter": "tamasfe.even-better-toml"
	},
	"editor.renderLineHighlight": "all",
	"workbench.colorCustomizations": {
			"editor.lineHighlightBackground": "#ffffff10",
	},
	"colorInfo.languages": [
    {
        "selector": "css",
        "colors": "css"
    }, {
        "selector": "sass",
        "colors": "css"
    }, {
        "selector": "scss",
        "colors": "css"
    }, {
        "selector": "less",
        "colors": "css"
    }
	],
	"colorInfo.fields": [
		"hex",
		"alpha",
		"rgb",
		"hsl"
	],
	"editor.unicodeHighlight.invisibleCharacters": false,
	"reactSnippets.settings.prettierEnabled": true,
	"evenBetterToml.formatter.allowedBlankLines": 1,
	"evenBetterToml.formatter.columnWidth": 80,
	"diffEditor.hideUnchangedRegions.enabled": true
}
